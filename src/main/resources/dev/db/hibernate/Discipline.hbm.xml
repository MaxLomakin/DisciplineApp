<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.olts.discipline.model.Habit" table="habit" catalog="disciplinedb">
        <id name="id" type="long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="10" not-null="true" unique="true" />
        </property>
        <property name="difficulty" type="integer">
            <column name="difficulty" length="20" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>